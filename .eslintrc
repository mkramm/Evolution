{
	"settings": {
		"react": {
			"pragma": "React", // Pragma to use, default to "React"
			"version": "15.0" // React version, default to the latest React stable release
		}
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"no-console":0,
		"quotes": [
			2,
			"single"
		],
		"eol-last": [
			0
		],
		"no-mixed-requires": [
			0
		],
		"no-underscore-dangle": [
			0
		]
	},
	"plugins": [
		"react"
	]
}